<Page x:Class="Library_Manager.View.CustomPages.BookSearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Manager.View.CustomPages"
      xmlns:CustomControls="clr-namespace:Library_Manager.View.CustomControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookSearchPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="BookDataGrid" HorizontalContentAlignment="Stretch">
            <DataGrid.Columns >
                <DataGridTextColumn Header="id" Width="*"/>
                <DataGridTextColumn Header="Title" Width="*" />
                <DataGridTextColumn Header="Pages" Width="*"/>
                <DataGridTextColumn Header="Author" Width="*" />
                <DataGridTextColumn Header="Availabilty" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        
        
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

        </Grid>
        
    </Grid>
</Page>
