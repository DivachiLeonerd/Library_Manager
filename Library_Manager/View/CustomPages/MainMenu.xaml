<Page x:Class="Library_Manager.View.CustomPages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Manager.View.CustomPages"
      xmlns:UserControls="clr-namespace:Library_Manager.View.CustomControls"
      mc:Ignorable="d"
      d:DesignHeight="400" d:DesignWidth="800"
      Title="MainMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="21"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <UserControls:MenuBar Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"/>
        <UserControls:CommandList Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Page>
